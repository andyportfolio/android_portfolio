

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/request_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/notify_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <Switch
            android:text="@string/switch1_title"
            android:textOn="@string/switch_Ontitle"
            android:textOff="@string/switch_Offtitle"
            android:switchPadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/send_switch" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <Switch
            android:text="@string/switch2_title"
            android:textOn="@string/switch_Ontitle"
            android:textOff="@string/switch_Offtitle"
            android:switchPadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/receive_switch" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/notifyConfigBtn"
                style="@style/LoginBtnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/loginbtn_bg"
                android:text="@string/btn_set" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/gotoListBtn"
                style="@style/LoginBtnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/loginbtn_bg"
                android:text="@string/btn_golist" />

        </LinearLayout>


    </LinearLayout>


